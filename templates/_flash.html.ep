            % if ( my $error = flash 'error' ) { 
                <div class="alert alert-danger col-md-12 mx-auto">
                    <p> <%= $error %> </p>
                </div>
            % }

            % if (my $message = flash 'message' ) {
                <div class="alert alert-success col-md-12 mx-auto">
                    <p> <%= $message %> </p>
                </div>
            % }
